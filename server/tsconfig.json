{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "esNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "baseUrl": "src",
    "module": "commonjs",
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "paths": {
      "@core/*": ["src/*"]
    }
  },
  "include": ["src/**/*", ".eslintrc.js"],
  "files": ["src/types/global.d.ts"],
  "exclude": ["node_modules"]
}
